$("#first_sighting_<%= @entry.id %>").replaceWith("<%= escape_javascript(render :partial => 'bird_entries/first_sighting', :locals => {:entry => @entry})%>");
$("#sightings_<%= @entry.id %>").fadeOut(500);

var entry_element = $("#entry_<%=@entry.id%>");
var entry_action_element = $("#entry_<%=@entry.id%> .entry_action");

entry_action_element.toggle();
entry_element.removeClass("highlight");

pulsate(entry_element);

function pulsate(element) {
    var effectClass = "pulsate";

    element.addClass(effectClass);

    effects(element, effectClass, effectClass, function () {
        element.removeClass(effectClass);
    });
}



